{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "Sui DCA Design System",
  "version": "1.0.0",
  "description": "Elegant, institutional fintech design system inspired by Ondo Finance - light theme with Garamond-style typography",

  "principles": {
    "trust": "Professional, institutional aesthetic that builds confidence",
    "clarity": "Clean layouts with generous whitespace for financial data",
    "elegance": "Refined serif typography balanced with modern sans-serif",
    "openness": "Transparent, approachable despite institutional positioning"
  },

  "colors": {
    "semantic": {
      "background": {
        "primary": "#FFFFFF",
        "secondary": "#FAFAFA",
        "tertiary": "#F5F5F5",
        "inverse": "#0A0A0A"
      },
      "foreground": {
        "primary": "#0A0A0A",
        "secondary": "#404040",
        "tertiary": "#737373",
        "muted": "#A3A3A3",
        "inverse": "#FFFFFF"
      },
      "border": {
        "default": "#E5E5E5",
        "subtle": "#F0F0F0",
        "strong": "#D4D4D4"
      },
      "accent": {
        "primary": "#0A0A0A",
        "hover": "#262626",
        "subtle": "#F5F5F5"
      },
      "status": {
        "success": "#166534",
        "successBg": "#F0FDF4",
        "error": "#991B1B",
        "errorBg": "#FEF2F2",
        "warning": "#92400E",
        "warningBg": "#FFFBEB",
        "info": "#1E40AF",
        "infoBg": "#EFF6FF"
      }
    },
    "palette": {
      "white": "#FFFFFF",
      "black": "#0A0A0A",
      "gray": {
        "50": "#FAFAFA",
        "100": "#F5F5F5",
        "200": "#E5E5E5",
        "300": "#D4D4D4",
        "400": "#A3A3A3",
        "500": "#737373",
        "600": "#525252",
        "700": "#404040",
        "800": "#262626",
        "900": "#171717",
        "950": "#0A0A0A"
      }
    }
  },

  "typography": {
    "fontFamilies": {
      "serif": {
        "name": "Cormorant Garamond",
        "fallback": "Georgia, Times New Roman, serif",
        "usage": "Headings, display text, hero sections",
        "googleFont": "https://fonts.google.com/specimen/Cormorant+Garamond",
        "weights": [400, 500, 600, 700]
      },
      "sans": {
        "name": "Inter",
        "fallback": "-apple-system, BlinkMacSystemFont, Segoe UI, sans-serif",
        "usage": "Body text, UI elements, data",
        "googleFont": "https://fonts.google.com/specimen/Inter",
        "weights": [400, 500, 600, 700]
      },
      "mono": {
        "name": "JetBrains Mono",
        "fallback": "Consolas, Monaco, monospace",
        "usage": "Code, addresses, numbers",
        "weights": [400, 500]
      }
    },
    "scale": {
      "display": {
        "size": "4rem",
        "lineHeight": "1.1",
        "letterSpacing": "-0.02em",
        "font": "serif",
        "weight": 500
      },
      "h1": {
        "size": "3rem",
        "lineHeight": "1.15",
        "letterSpacing": "-0.02em",
        "font": "serif",
        "weight": 500
      },
      "h2": {
        "size": "2.25rem",
        "lineHeight": "1.2",
        "letterSpacing": "-0.01em",
        "font": "serif",
        "weight": 500
      },
      "h3": {
        "size": "1.5rem",
        "lineHeight": "1.3",
        "letterSpacing": "-0.01em",
        "font": "serif",
        "weight": 500
      },
      "h4": {
        "size": "1.25rem",
        "lineHeight": "1.4",
        "letterSpacing": "0",
        "font": "sans",
        "weight": 600
      },
      "body": {
        "size": "1rem",
        "lineHeight": "1.6",
        "letterSpacing": "0",
        "font": "sans",
        "weight": 400
      },
      "bodyLarge": {
        "size": "1.125rem",
        "lineHeight": "1.6",
        "letterSpacing": "0",
        "font": "sans",
        "weight": 400
      },
      "bodySmall": {
        "size": "0.875rem",
        "lineHeight": "1.5",
        "letterSpacing": "0",
        "font": "sans",
        "weight": 400
      },
      "caption": {
        "size": "0.75rem",
        "lineHeight": "1.4",
        "letterSpacing": "0.01em",
        "font": "sans",
        "weight": 500
      },
      "overline": {
        "size": "0.75rem",
        "lineHeight": "1.4",
        "letterSpacing": "0.08em",
        "font": "sans",
        "weight": 600,
        "transform": "uppercase"
      }
    }
  },

  "spacing": {
    "base": 4,
    "scale": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem",
      "32": "8rem"
    }
  },

  "borderRadius": {
    "none": "0",
    "sm": "0.25rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },

  "shadows": {
    "none": "none",
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.07), 0 2px 4px -2px rgb(0 0 0 / 0.07)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.07), 0 4px 6px -4px rgb(0 0 0 / 0.07)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.07), 0 8px 10px -6px rgb(0 0 0 / 0.07)"
  },

  "components": {
    "button": {
      "primary": {
        "background": "#0A0A0A",
        "color": "#FFFFFF",
        "hoverBackground": "#262626",
        "borderRadius": "0.5rem",
        "padding": "0.75rem 1.5rem",
        "fontSize": "0.875rem",
        "fontWeight": 500,
        "letterSpacing": "0.01em"
      },
      "secondary": {
        "background": "#FFFFFF",
        "color": "#0A0A0A",
        "border": "1px solid #E5E5E5",
        "hoverBackground": "#FAFAFA",
        "borderRadius": "0.5rem"
      },
      "ghost": {
        "background": "transparent",
        "color": "#404040",
        "hoverBackground": "#F5F5F5"
      }
    },
    "card": {
      "background": "#FFFFFF",
      "border": "1px solid #E5E5E5",
      "borderRadius": "1rem",
      "padding": "1.5rem",
      "shadow": "none"
    },
    "input": {
      "background": "#FFFFFF",
      "border": "1px solid #E5E5E5",
      "borderRadius": "0.5rem",
      "padding": "0.75rem 1rem",
      "focusBorder": "#0A0A0A",
      "placeholderColor": "#A3A3A3"
    }
  },

  "animation": {
    "duration": {
      "fast": "150ms",
      "normal": "200ms",
      "slow": "300ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "inOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  }
}
