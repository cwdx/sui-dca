{
  "name": "sui-dca",
  "version": "0.0.2",
  "description": "Dollar Cost Averaging smart contracts for Sui blockchain",
  "private": true,
  "scripts": {
    "build": "sui move build -p packages/dca",
    "test": "sui move test -p packages/dca",
    "publish:testnet": "sui client publish packages/dca --gas-budget 500000000",
    "publish:mainnet": "sui client publish packages/dca --gas-budget 500000000",
    "gen:client": "sui-client-gen",
    "fmt": "yarn fmt:move && yarn fmt:ts",
    "fmt:move": "prettier --write 'packages/**/*.move'",
    "fmt:ts": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "env:testnet": "sui client switch --env testnet",
    "env:mainnet": "sui client switch --env mainnet",
    "env:devnet": "sui client switch --env devnet",
    "address": "sui client active-address",
    "balance": "sui client balance",
    "gas": "sui client gas",
    "faucet": "sui client faucet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cwdx/sui-dca-bot.git"
  },
  "keywords": [
    "sui",
    "dca",
    "defi",
    "smart-contracts",
    "move"
  ],
  "author": "cwdx",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cwdx/sui-dca-bot/issues"
  },
  "homepage": "https://github.com/cwdx/sui-dca-bot#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@mysten/prettier-plugin-move": "^0.3.4",
    "prettier": "^3.8.0"
  },
  "dependencies": {
    "@mysten/sui": "^1.0.0"
  }
}
